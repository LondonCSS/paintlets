---
import BaseLayout from '../layouts/base.astro'
import Samples from "$components/samples";
import PaintletLoader from "$components/paintlet-loader.astro";

const title = 'Seigaiha';
---

<style lang="scss" global>
  .samples {
    --wh: 360px;
    --radius: 55;
  }

  .sample {
    --bg-image: paint(seigaiha);
  }

  .seigaiha--1 {
    --radius: 55;
  }

  .seigaiha--2 {
    --rings: 4;
    --stroke-width: 8;
    --stroke-colour: #222 ;
    --bg: #111;
  }

  .seigaiha--3 {
    --rings: 8;
    --radius: 70;
    --bg: hsl(200deg, 50%, 30%);
    --stroke-width: 2;
    --stroke-colour: hsl(200deg, 50%, 40%);
  }

  .sample__demo.seigaiha--1 {
    --river: hsl(200deg, 60%, 20%);
  }

  .sample__demo.seigaiha--2 {
    --river: hsl(200deg, 60%, 45%);
  }

  .sample__demo.seigaiha--3 {
    --river: hsl(200deg, 70%, 20%);
  }
</style>

<BaseLayout title={title}>
  <Samples paintlet="seigaiha" samples="3" />
  <PaintletLoader paintlet="seigaiha" />
</BaseLayout>
