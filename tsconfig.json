{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "noEmit": true
  },
  "exclude": [".eslintrc.cjs"]
}
